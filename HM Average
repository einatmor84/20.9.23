import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);

        System.out.println("give me 3 numbers:");
        int num1 = s.nextInt();
        int num2 = s.nextInt();
        int num3 = s.nextInt();

        Average average = new Average();
        average.printAvg( num1,num2,num3);
    }
}
class Average{
    public void printAvg(int num1 ,int num2, int num3)
    {
        System.out.println("Memutza: " + (num1 + num2 + num3) / 3 );
    }
}
